rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Documents collection - users can only access their own documents
    match /documents/{documentId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId;
      // Allow list for authenticated users (will be filtered by client)
      allow list: if request.auth != null;
    }

    // Notifications collection - users can only access their own notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId;
      // Allow list for authenticated users (will be filtered by client)
      allow list: if request.auth != null;
    }

    // Submissions collection - ADMIN ONLY (corrected based on audit)
    match /submissions/{submissionId} {
      allow read, write: if request.auth != null 
        && request.auth.token.admin == true;
    }

    // User profiles (if needed)
    match /users/{userId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == userId;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
