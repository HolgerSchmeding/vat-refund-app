# VAT Refund Application Configuration
# Copy this file to .env and fill in your values

# Google Cloud Platform Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GCP_PROJECT=your-project-id  # Alternative env var name
GCP_LOCATION=eu
GCP_REGION=europe-west1

# Document AI Configuration  
DOCUMENT_AI_PROCESSOR_ID=your-processor-id
DOCUMENT_AI_LOCATION=eu

# Vertex AI Configuration
VERTEX_AI_PROJECT=your-project-id  # Usually same as GOOGLE_CLOUD_PROJECT
VERTEX_AI_LOCATION=europe-west1

# SendGrid Configuration (for email notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@your-company.com

# Firebase Configuration
FIREBASE_PROJECT=your-project-id  # Usually same as GOOGLE_CLOUD_PROJECT

# Environment Configuration
NODE_ENV=development  # development, staging, production
FUNCTIONS_EMULATOR=true  # Set to true when running in Firebase emulators

# Example values for local development/demo:
# GOOGLE_CLOUD_PROJECT=demo-vat-refund-app
# GCP_LOCATION=eu
# GCP_REGION=europe-west1
# DOCUMENT_AI_PROCESSOR_ID=b334b6308b8afcb6
# DOCUMENT_AI_LOCATION=eu
# VERTEX_AI_LOCATION=europe-west1
# NODE_ENV=development
# FUNCTIONS_EMULATOR=true
