rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // DEVELOPMENT ONLY: Erlaube Lese- und Schreibzugriff für alle angemeldeten Benutzer
    // WARNUNG: Diese Regel ist nur für die lokale Entwicklung gedacht!
    // Vor Live-Deployment durch sicherere Regeln ersetzen!
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
